@page "/Logout"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage ProtectedSessionStorage  
<style>
    .btn {
        background-color: #b8ae9b;
        color: white;
        text-align: center;
    }
    .logout-container {
        color: #775A4D;
        border: white solid 1px;
        margin-top: 50vh;
        margin-bottom: 50vh;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        background-color: rgba(193, 175, 158, 0.34);
    }
    body{
        height: 100vh;

    }
    
</style>

<div class="col-4 m-auto cont">
    <div class="logout-container p-3 radius">
        <div class="row d-flex justify-content-center align-items-center">
            <h1 class="d-flex justify-content-center">Goodbye!</h1>
        </div>
        <div class="row d-flex justify-content-center">
            <p class="d-flex justify-content-center">You have successfully logged out.</p>
        </div>
        <div class="row d-flex justify-content-center">
            <div class=" col-4">
                <a href="/login" class="btn d-flex justify-content-center ">Login Again</a>
            </div>
        </div>
    </div>
</div>
@code {
    protected override async Task OnInitializedAsync()
    {
        await ProtectedSessionStorage.DeleteAsync("UserId");
    }

}