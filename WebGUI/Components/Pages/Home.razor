@page "/"

@inject NavigationManager Navigation
<style>
    .features {
        display: flex;
        justify-content: space-around;
        padding: 3rem 0;
        height: 35rem;
    }
    .feature-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);

        text-align: center;
        transition: transform 0.3s ease;
    }
    .feature-card:hover {
        transform: translateY(-10px);
    }
    .feature-card img {
        width: 100%;
        margin-bottom: 1rem;
        height: 70%;
        object-fit: cover;
    }
    .hero-section{
        background:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('bg.webp') no-repeat center center;
        background-size: cover;
        height: 30rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        
    }
</style>

<PageTitle>Magic Diary</PageTitle>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<header>
    <div class="hero-section text-center text-white py-5 m-0 mt-3 border border-3 border-dark rounded-4">
        <h3 class="display-4 fw-bold">Welcome to the Magic Diary!</h3>
        <p class="lead">Create entries, discover secret messages, and experience the special Halloween mode!</p>
        <button class="btn btn-light btn-lg">Start now</button>
    </div>
</header>

<section class="container mt-5">
    <div class="row text-center">
        <h2 class="col-12">What you can do</h2>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-4 features">
            <div class="card shadow-lg feature-card">
                <img src="2.jpg" class="card-img-top" alt="Create Entry">
                <div class="card-body text-center">
                    <h3 class="card-title">Create Entry</h3>
                    <p class="card-text">Capture your thoughts and experiences – anytime, anywhere.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 features">
            <div class="card shadow-lg feature-card">
                <img src="3.webp" class="card-img-top" alt="Manage Entries">
                <div class="card-body text-center">
                    <h3 class="card-title">Manage Entries</h3>
                    <p class="card-text">Edit and organize your diary entries just the way you like.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 features">
            <div class="card shadow-lg feature-card">
                <img src="4.webp" class="card-img-top" alt="Halloween Mode">
                <div class="card-body text-center">
                    <h3 class="card-title">Halloween Mode</h3>
                    <p class="card-text">Experience a magical diary with surprising, humorous responses!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container mt-5 text-center" id="modi">
    <h2>Choose Your Mode</h2>
    <p>Decide whether to use your diary in a classic way or with a magical twist.</p>
    <div class="row mt-4 justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h3 class="card-title text-primary">Normal Mode</h3>
                    <p class="card-text">Use the diary as usual – simple, safe, and efficient.</p>
                    <button class="btn btn-primary">Start Normal Mode</button>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h3 class="card-title text-warning">Halloween Mode</h3>
                    <p class="card-text">Let yourself be surprised by magical and funny responses!</p>
                    <button class="btn btn-warning">Activate Halloween Mode</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
